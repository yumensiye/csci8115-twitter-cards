
<html>
<style>
.head-portrait {
  width: 48px;
  height: 48px;
}
.verified-icon {
  width: 18px;
  height: 18px;
}
.bottom-icon {
  width: 16px;
  height: 16px;
}
.bottom-text {
  color: #aab8c2;
  font-size: 12px;
  font-weight: bold;
}
.bottom-text-faved {
  color: #fdac44;
  font-size: 12px;
  font-weight: bold;
}
.gray-text {
  color: #8899a6;
  font-size: 14px;
}
.small-gray-text {
  color: #8899a6;
  font-size: 12px;
}
.number {
  font-size: 18px;
  font-weight: 500;
  color: #336699;
}
.bold-text {
  font-size: 18px;
}
.main-text {
  font-size: 26px;
}
.tweet-date {
  font-size: 13px;
  color: #8899a6;
}
</style>

<head>
  <title>Twitter</title>
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

  <!-- Optional theme -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

  <!-- Latest compiled and minified JavaScript -->
  <script
  src="https://code.jquery.com/jquery-2.2.4.min.js"
  integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
  crossorigin="anonymous"></script>
  <script src="https://cdn.socket.io/socket.io-1.4.5.js"></script>
  <script src="scripts.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</head>

<body>
<div class="container" style="margin-top: 20px;" >
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <% data.forEach(function(ele){ %>
      <div class="row">
        <div class="row">
          <div class="col-md-1">
            <img class="head-portrait" src="<%= ele.avatar %>" alt="">
          </div>
          <div class="col-md-7">
            <div class="col-md-12 bold-text">
              <strong><%= ele.full_name %></strong><img class="verified-icon" src="/imgs/verified.png" />
            </div>
            <div class="col-md-12 gray-text">
              <%= ele.username %>
            </div>
          </div>
          <div class="col-md-4">
            <div class="pull-right">
              <h4>#<%= ele.id %></h4>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <p class="main-text">
              <%= ele.tweet_text %>
              <a href="http://<%= ele.tweet_link %>"><%= ele.tweet_link %></a>
            </p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2">
            <span class="small-gray-text">RETWEETS</span>
            <span class="number"><%= ele.retweets %></span>
          </div>
          <div class="col-md-2">
            <div class="col-md-12">
              <span class="small-gray-text">LIKES</span>
              <span class="number"><%= ele.likes %></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <p class="tweet-date"><%= ele.date %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2">
            <img class="bottom-icon" src="/imgs/reply.png" />
          </div>
          <div class="col-md-2">
            <img class="bottom-icon" src="/imgs/retweet.png" />
            <span class="bottom-text"><%= ele.retweets %></span>
          </div>
          <div class="col-md-2">
            <div class="faved_area" id=<%= ele.id %>>
              <img id="faved_img" class="bottom-icon" src="/imgs/unfaved.png" />
              <span id="faved_count" class="bottom-text"><%= ele.likes %></span>
            </div>
          </div>
        </div>
      </div>
      <hr>
    <% }) %>
  </div>
  <div class="col-md-3">
  </div>
</div>
</body>
</html>
